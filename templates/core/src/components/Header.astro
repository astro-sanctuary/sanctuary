---
import { client } from "@lib/client.ts";
import { menuItemsMainSchema } from "@lib/schemas/menuItemsMainSchema";
import HeaderLink from "@components/HeaderLink.astro";
import SocialMenu from "@components/SocialMenu.astro";
import { getSettings } from "@lib/settings";

const settings = await getSettings();

const mainMenuSchema = menuItemsMainSchema;
const mainMenu = mainMenuSchema.parse(
  await client.getCollection("menu_items--main"),
);
---

<header>
  <nav>
    <h2><a href="/">{settings.field_sanctuary_site_title}</a></h2>
    <div class="internal-links">
      {
        mainMenu.map((item) => {
          return <HeaderLink href={item.url}>{item.title}</HeaderLink>;
        })
      }
      <HeaderLink href="/blog">Blog (Static)</HeaderLink>
    </div>
    <SocialMenu />
  </nav>
</header>
<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }
  nav :global(.social-links),
  nav :global(.social-links a) {
    display: flex;
    padding: 0 0.5em;
    color: var(--black);
    text-decoration: none;
  }
  @media (max-width: 720px) {
    nav :global(.social-links) {
      display: none;
    }
  }
</style>
